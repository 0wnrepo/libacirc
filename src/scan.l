%{
#include "acirc.h"
#include "parse.h"
#include <stdlib.h>
%}

%option noyywrap
%option always-interactive

%%

[0-9]+      { yylval.str = strdup(yytext); return STR;     }
x[0-9]+     { yylval.val = atoi(yytext+1); return XID;      }
y[0-9]+     { yylval.val = atoi(yytext+1); return YID;      }
TEST        { return TEST; }
input       {                              return INPUT;    }
gate        {                              return GATE;     }
output      {                              return OUTPUT;   }

ADD|SUB|MUL|ID {
    yylval.op = acirc_str2op(yytext); 
    return GATETYPE; 
} 

[\n]     { return NEWLINE; }

:.*      { }
[ \t]+   { }
